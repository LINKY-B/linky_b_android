<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".auth.LoginActivity">

    <ImageView
        android:id="@+id/imageView_login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="161dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_login_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/roboto_regular"
        android:text="마음 맞는 선후배 매칭 서비스"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_login_logo" />

    <EditText
        android:id="@+id/editText_login_id"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="162dp"
        android:background="@drawable/edittext_background"
        android:hint="아이디"
        android:inputType="textEmailAddress"
        android:paddingLeft="11dp"
        android:textColor="@color/grey"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_login_description" />

    <TextView
        android:id="@+id/textView_login_idErrorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="오류 메시지"
        android:textColor="@color/black"
        android:textSize="8dp"
        app:layout_constraintStart_toStartOf="@id/editText_login_id"
        app:layout_constraintTop_toBottomOf="@id/editText_login_id" />

    <EditText
        android:id="@+id/editText_login_password"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_background"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:textColor="@color/grey"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_login_idErrorMessage" />

    <TextView
        android:id="@+id/textView_login_passWordErrorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="오류 메시지"
        android:textColor="@color/black"
        android:textSize="8dp"
        app:layout_constraintStart_toStartOf="@id/editText_login_password"
        app:layout_constraintTop_toBottomOf="@id/editText_login_password" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_login_submit"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="49dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/roboto_bold"
        android:paddingVertical="16dp"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_login_goSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="회원가입"
        android:textColor="@color/grey"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@id/button_login_submit"
        app:layout_constraintTop_toBottomOf="@id/button_login_submit" />

    <TextView
        android:id="@+id/textView_login_find_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="비밀번호 찾기"
        android:textColor="@color/grey"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@id/button_login_submit"
        app:layout_constraintTop_toBottomOf="@id/button_login_submit" />

</androidx.constraintlayout.widget.ConstraintLayout>